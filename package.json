{
  "name": "remax-ide",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "files": [],
  "scripts": {
    "dev": "pnpm run --parallel --if-present --recursive dev",
    "build:common": "pnpm run --filter \"@remax-ide/common\" build",
    "build:core": "pnpm run --filter \"@remax-ide/core\" build",
    "build:extension": "pnpm run --parallel --if-present --recursive --filter \"@remax-ide/extension-*\" build",
    "build:website": "pnpm run --filter \"remax-ide-website\" build",
    "build": "pnpm run build:common && pnpm run build:core && pnpm run build:extension && pnpm run build:website",
    "postinstall": "pnpm run husky:prepare",
    "changeset": "changeset",
    "release": "alias npm=tnpm && changeset version && changeset publish",
    "release:alpha": "alias npm=tnpm && changeset version --snapshot alpha && changeset publish --tag alpha",
    "release:beta": "alias npm=tnpm && changeset version --snapshot beta && changeset publish --tag beta",
    "ci": "npm run lint:eslint && npm run lint:prettier && npm run test:ci",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --maxWorkers=4 --forceExit",
    "lint": "pnpm run \"/^lint:.+/\"",
    "lint:eslint": "eslint --quiet --fix --ext .ts,.js .",
    "lint:prettier": "prettier --loglevel warn --write '**/*.{ts,tsx,js,jsx,json,md}'",
    "clean": "pnpm run \"/^clean:.+/\"",
    "clean:module": "rimraf --glob ./node_modules ./packages/*/node_modules",
    "clean:dist": "rimraf --glob ./packages/*/dist ./packages/*/src/.umi*",
    "clean:test": "rimraf --glob ./coverage ./packages/*/coverage",
    "husky:pre-commit": "lint-staged",
    "husky:prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --loglevel warn --write"
    ]
  },
  "resolutions": {
    "@codeblitzjs/ide-code-api": "1.0.3",
    "@codeblitzjs/ide-code-service": "1.0.3",
    "@codeblitzjs/ide-common": "1.0.3",
    "@codeblitzjs/ide-core": "1.0.3",
    "@codeblitzjs/ide-i18n": "1.0.3",
    "@codeblitzjs/ide-sumi-core": "1.0.3",
    "@opensumi/ide-core-browser": "2.23.0",
    "@opensumi/ide-core-common": "2.23.0",
    "@opensumi/ide-debug": "2.23.0",
    "@opensumi/ide-extension": "2.23.0",
    "@opensumi/ide-file-scheme": "2.23.0",
    "@opensumi/ide-file-service": "2.23.0",
    "@opensumi/ide-logs": "2.23.0",
    "@opensumi/di": "1.8.1"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.14",
    "@changesets/cli": "^2.26.1",
    "@codeblitzjs/ide-cli": "1.0.3",
    "@swc/core": "^1.3.61",
    "@swc/jest": "^0.2.26",
    "@types/assert": "^1.5.6",
    "@types/jest": "^29.5.1",
    "@types/node": "^16.6.1",
    "@umijs/fabric": "^2.14.1",
    "eslint": "^7.32.0",
    "father": "^4.1.9",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "solc": "^0.8.22"
  },
  "repository": "git@github.com:jeasonstudio/remax.git"
}
