{
  "name": "solidity-language-server-client",
  "displayName": "solidity-language-server-client",
  "description": "Support solidity language in web enviroments.",
  "publisher": "jeason",
  "version": "0.0.1",
  "contributors": [
    "Jeason"
  ],
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:solidity"
  ],
  "browser": "./dist/extension.js",
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./config/solidity.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./config/solidity.syntaxes.json",
        "balancedBracketScopes": [
          "*"
        ],
        "unbalancedBracketScopes": [
          "meta.scope.case-pattern.solidity"
        ]
      }
    ],
    "commands": [
      {
        "command": "solidity-language-server-client.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": [
      {
        "order": 22,
        "id": "lsp-web-extension-sample",
        "title": "lsp-web-extension-sample",
        "properties": {
          "lsp-web-extension-sample.trace.server": {
            "type": "string",
            "scope": "window",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "verbose",
            "description": "Traces the communication between VS Code and the lsp-web-extension-sample language server."
          }
        }
      }
    ]
  },
  "scripts": {
    "dev": "run-p watch-web run-in-browser",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --printServerLog --open-devtools --browserType=chromium --extensionDevelopmentPath=. ./fixtures"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/prettier": "^2.7.2",
    "@types/vscode": "^1.76.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-web": "^0.0.35",
    "assert": "^2.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "process": "^0.11.10",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@ignored/solidity-language-server": "^0.6.12",
    "@remax-ide/solidity-language-server-server": "workspace:^",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solc": "^0.8.19",
    "solidity-language-server-webworker": "^1.0.0",
    "solparse-exp-jb": "^2.2.27",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.0.7"
  }
}
